<div class="row">
  <div class="col-md-4 mx-auto">
    <div class="card mt-4 text-center">
      <div class="card-header">
        <h1>Account Login</h1>
      </div>
      <img src="/img/logo.png" class="logo mx-auto d-block m-4" alt="logo">
      <div class="card-body">
        <form action="/users/signin" method="POST">
          <div class="mb-3">
            <input type="email" class="form-control" name="email" placeholder="Email" autofocus>
          </div>
          <div class="mb-3">
            <input type="password" class="form-control" name="password" placeholder="Password" autofocus>
          </div>
          <div class="mb-3">
            <button type="submit" class="btn btn-primary w-100">SignIn</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>